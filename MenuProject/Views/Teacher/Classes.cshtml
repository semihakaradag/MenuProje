@model List<MenuProject.Models.Course>

@{
    ViewData["Title"] = "Derslerim";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Ders Adı</th>
                    <th>Fiyat</th>
                    <th>Eğitmen</th>
                    <th>Başlangıç</th>
                    <th>Bitiş</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Title</td>
                        <td>@Model[i].Price ₺</td>
                        <td>@Model[i].TeacherName</td>
                        <td>@Model[i].StartDate?.ToString("dd.MM.yyyy")</td>
                        <td>@Model[i].EndDate?.ToString("dd.MM.yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">Henüz ders eklenmemiş.</div>
    }
</div>
</div>
</div>
