@model MenuProject.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}

<div class="bg-body-tertiary min-vh-100 d-flex flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card-group d-block d-md-flex row">
                    <!-- Giriş Yap Kartı -->
                    <div class="card col-md-7 p-4 mb-0">
                        <div class="card-body">
                            <h1>Giriş Yap</h1>
                            <p class="text-body-secondary">Hesabınıza giriş yapın</p>

                            <form asp-action="SignIn" method="post">
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <svg class="icon">
                                            <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-user"></use>
                                        </svg>
                                    </span>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="E-Posta Adresiniz" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="input-group mb-4">
                                    <span class="input-group-text">
                                        <svg class="icon">
                                            <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-lock-locked"></use>
                                        </svg>
                                    </span>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" required />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4" type="submit">Giriş Yap</button>
                                    </div>
                                    <div class="col-6 text-end">
                                        <a href="#" class="btn btn-link px-0">Şifremi Unuttum?</a>
                                    </div>
                                </div>

                                <div class="form-check mt-3">
                                    <input asp-for="RememberMe" class="form-check-input" />
                                    <label class="form-check-label">Beni Hatırla</label>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Kayıt Ol Kartı -->
                    <div class="card col-md-5 text-white bg-primary py-5">
                        <div class="card-body text-center">
                            <h2>Kayıt Ol</h2>
                            <p>Henüz hesabınız yok mu? Şimdi kaydolun ve platformumuzun avantajlarından yararlanın.</p>
                            <a asp-action="SignUp" asp-controller="Account" class="btn btn-lg btn-outline-light mt-3">Hemen Kaydol</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CoreUI ve gerekli eklentiler -->
<script src="~/js/coreui.bundle.min.js"></script>
<script src="~/js/simplebar.min.js"></script>
<script src="~/js/chart.umd.js"></script>
<script src="~/js/coreui-chartjs.js"></script>
<script src="~/js/index.js"></script>
<script src="~/js/main.js"></script>

<style>
    /* Form Kutularına Işık Efekti */
    .form-control:focus {
        box-shadow: 0px 0px 8px rgba(0, 123, 255, 0.7);
        border-color: #007bff;
    }

    /* Giriş Yap Butonu */
    .btn-primary {
        width: 100%;
        font-size: 18px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            box-shadow: 0px 0px 10px rgba(0, 123, 255, 0.7);
        }
    /* Ana Container'ı Yukarı Taşı */
    .container {
        margin-top: -50px; /* Yukarı taşır */
    }

    /* Form Kutusunu Yukarı Taşı */
    .card-group {
        margin-top: -30px; /* Formu biraz yukarı alır */
    }

    /* Giriş Kartını Küçült */
    .card.col-md-7 {
        padding: 30px;
    }

    /* Kayıt Ol Kartını Küçült */
    .card.col-md-5 {
        padding: 40px;
    }

   

    .card-group {
        margin-top: 0px;
    }

    }
</style>
