@model MenuProject.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}

<div class="login-container">
    <h2 class="text-center">Giriş Yap</h2>

    <form asp-action="SignIn" method="post" class="login-form">
        <div class="form-group">
            <label>Email:</label>
            <input asp-for="Email" class="form-control input-glow" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Şifre:</label>
            <input asp-for="Password" type="password" class="form-control input-glow" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check text-center">
            <input asp-for="RememberMe" class="form-check-input" />
            <label class="form-check-label">Beni Hatırla</label>
        </div>

        <button type="submit" class="btn btn-success btn-block">Giriş Yap</button>
    </form>
</div>

<style>
    /* Form konteynerini ortala ve genişliği küçült */
    .login-container {
        max-width: 600px;
        max-height:800px;
        margin: 50px auto;
        padding: 90px;
        border-radius: 10px;
        background: #f8f9fa;
        box-shadow: 0px 0px 10px rgba(0, 128, 0, 0.5);
    }

    /* Input kutularına yeşil ışıltı efekti ekle */
    .input-glow {
        border: 2px solid #28a745;
        transition: all 0.3s ease-in-out;
    }

    .input-glow:focus {
        box-shadow: 0px 0px 10px rgba(0, 255, 0, 0.8);
        border-color: #218838;
    }
        
    /* Giriş yap butonunu yeşil yap ve tam genişlikte olmasını sağla */
    .btn-success {
        width: 100%;
        margin-top: 15px;
        padding: 10px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
   

    .btn-success:hover {
        background-color: #218838;
        box-shadow: 0px 0px 10px rgba(0, 255, 0, 0.6);
    }
</style>
