@model MenuProject.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}

<div class="bg-body-tertiary min-vh-100 d-flex flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card-group d-block d-md-flex row">
                    <!-- Giriş Yap Kartı -->
                    <div class="card col-md-7 p-4 mb-0">
                        <div class="card-body">
                            <h1>Giriş Yap</h1>
                            <p class="text-body-secondary">Hesabınıza giriş yapın</p>

                            <form asp-action="SignIn" method="post">
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <svg class="icon">
                                            <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-user"></use>
                                        </svg>
                                    </span>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="E-Posta Adresiniz" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="input-group mb-4">
                                    <span class="input-group-text">
                                        <svg class="icon">
                                            <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-lock-locked"></use>
                                        </svg>
                                    </span>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" required />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4" type="submit">Giriş Yap</button>
                                    </div>
                                    <div class="col-6 text-end">
                                        <a href="#" class="btn btn-link px-0">Şifremi Unuttum?</a>
                                    </div>
                                </div>

                                <div class="form-check mt-3">
                                    <input asp-for="RememberMe" class="form-check-input" />
                                    <label class="form-check-label">Beni Hatırla</label>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Kayıt Ol Kartı -->
                    <div class="card col-md-5 text-white bg-primary py-5">
                        <div class="card-body text-center">
                            <h2>Kayıt Ol</h2>
                            <p>Henüz hesabınız yok mu? Şimdi kaydolun ve platformumuzun avantajlarından yararlanın.</p>
                            <a asp-action="SignUp" asp-controller="Account" class="btn btn-lg btn-outline-light mt-3">Hemen Kaydol</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CoreUI ve gerekli eklentiler -->
<script src="~/js/coreui.bundle.min.js"></script>
<script src="~/js/simplebar.min.js"></script>
<script src="~/js/chart.umd.js"></script>
<script src="~/js/coreui-chartjs.js"></script>
<script src="~/js/index.js"></script>
<script src="~/js/main.js"></script>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(function () {
            $("form").on("submit", function () {
                if (!$(this).valid()) {
                    $(this).find(".input-validation-error").addClass("is-invalid");
                }
            });
        });
    </script>
}



