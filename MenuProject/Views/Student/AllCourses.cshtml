@model List<MenuProject.Models.Course>

@{
    ViewData["Title"] = "Tüm Kurslarım";
}

<div style="margin-left: 260px; margin-top: 30px;">
    <div class="card text-center">
        <div class="card-header">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link" href="#">Aktif Derslerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Tamamladığım Derslerim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#">Tüm Kurslarım</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var course in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" style="height: 180px; object-fit: cover;" />

                            <div class="card-body">
                                <h5 class="card-title">@course.Title</h5>
                                <p class="card-text">@course.Description</p>

                                <ul class="list-group list-group-flush text-start">
                                    <li class="list-group-item"><strong>Eğitmen:</strong> @course.TeacherName</li>
                                    <li class="list-group-item"><strong>Fiyat:</strong> @String.Format("{0:N2}", course.Price) ₺</li>
                                    <li class="list-group-item"><strong>Uygun Doğum Yılı:</strong> @course.MinBirthYear - @course.MaxBirthYear</li>
                                    <li class="list-group-item"><strong>Ders Tarihleri:</strong> @course.StartDate?.ToString("dd.MM.yyyy") - @course.EndDate?.ToString("dd.MM.yyyy")</li>
                                </ul>
                            </div>

                            <div class="card-footer">
                                <div class="d-flex justify-content-between align-items-baseline">
                                    <div class="fw-semibold">
                                        <span>%0</span>
                                    </div>
                                </div>
                                <div class="progress progress-thin mt-1">
                                    <div class="progress-bar bg-info" role="progressbar"
                                         style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-warning mt-4">Henüz kurs bulunmamaktadır.</div>
            }
        </div>
    </div>
</div>
