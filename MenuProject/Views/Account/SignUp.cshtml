@model MenuProject.ViewModels.SignUpViewModel
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<div class="register-container">
    <div class="register-header">
    <h2 class="text-center">Kayıt Ol</h2>
    </div>

<!-- Butonlar -->
<div class="text-center">
    <button id="studentBtn" class="btn btn-primary btn-lg">Öğrenci Kaydı</button>
    <button id="teacherBtn" class="btn btn-success btn-lg">Öğretmen Kaydı</button>
</div>

<br>

<!-- Öğrenci Formu -->
<div id="studentForm" style="display: none;">
    <h3>Öğrenci Kaydı</h3>
    <form asp-action="RegisterStudent" method="post">
        <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <input asp-for="Phone" class="form-control" placeholder="Telefon" />
        <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifre Tekrar" />
        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </form>
</div>

<!-- Öğretmen Formu -->
<div id="teacherForm" style="display: none;">
    <h3>Öğretmen Kaydı</h3>
    <form asp-action="RegisterTeacher" method="post">
        <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <input asp-for="Phone" class="form-control" placeholder="Telefon" />
        <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifre Tekrar" />
        <button type="submit" class="btn btn-secondary">Kayıt Ol</button>
    </form>
</div>
</div>

<style>
    /* Kayıt Ol kutusunu ortala ve başlığı içine al */
    .register-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 20px;
        border-radius: 12px;
        background: transparent; /* Şeffaf iç kısım */
        border: 2px solid black; /* Siyah çerçeve */
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.5); /* Hafif siyah ışıltı */
        text-align: center;
        position: relative;
        padding-top: 50px;
    }

    /* Başlık kısmı kutunun içine girecek ve yukarıda görünecek */
    .register-header {
        position: absolute;
        top: -25px;
        left: 50%;
        transform: translateX(-50%);
        background: white;
        padding: 5px 20px;
        border-radius: 10px;
        font-size: 22px;
        font-weight: bold;
        border: 2px solid black;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    /* Butonları düzenle */
    .btn-container {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-lg {
        width: 180px;
        padding: 12px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        box-shadow: 0px 0px 10px rgba(0, 123, 255, 0.5);
    }

        .btn-primary:hover {
            background-color: #0056b3;
            box-shadow: 0px 0px 15px rgba(0, 123, 255, 0.7);
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        box-shadow: 0px 0px 10px rgba(40, 167, 69, 0.5);
    }

        .btn-success:hover {
            background-color: #1e7e34;
            box-shadow: 0px 0px 15px rgba(40, 167, 69, 0.7);
        }

    /* Kayıt formunun iç kısmı */
    .register-form {
        margin-top: 20px;
        padding: 15px;
        border-radius: 8px;
        background: #ffffff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        margin-bottom: 10px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 6px;
    }


</style>

<script>
    document.getElementById("studentBtn").addEventListener("click", function () {
        document.getElementById("studentForm").style.display = "block";
        document.getElementById("teacherForm").style.display = "none";
    });

    document.getElementById("teacherBtn").addEventListener("click", function () {
        document.getElementById("teacherForm").style.display = "block";
        document.getElementById("studentForm").style.display = "none";
    });
</script>
